<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_device_type"
        android:src="@drawable/bluetooth_default"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <LinearLayout
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/img_device_type"
        app:layout_constraintTop_toTopOf="@id/img_device_type"
        app:layout_constraintBottom_toBottomOf="@id/img_device_type"
        android:layout_width="240dp"
        android:layout_height="44dp">

        <TextView
            android:id="@+id/text_device_name"
            android:text="N/A"
            android:textColor="#0000ff"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="24dp" />
        <TextView
            android:id="@+id/text_device_address"
            android:text="00:00:00:00:00:00"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_pair"
        android:text="PAIR        >"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>